{
  "manifest_version": 2,
  "name": "Nextdoor Deep Search",
  "version": "1.1.0",
  "description": "Deep search Nextdoor posts with full thread extraction and markdown export",

  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "tabs",
    "https://nextdoor.com/*",
    "https://api.anthropic.com/*",
    "<all_urls>"
  ],

  "web_accessible_resources": [
    "results/results.html",
    "results/results.css",
    "results/results.js"
  ],

  "background": {
    "scripts": [
      "background/llm-providers.js",
      "background/background.js"
    ],
    "persistent": true
  },

  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },

  "content_scripts": [
    {
      "matches": ["https://nextdoor.com/*"],
      "js": ["content/extract.js"],
      "run_at": "document_idle"
    }
  ],

  "browser_action": {
    "default_icon": {
      "48": "icons/icon-48.png",
      "96": "icons/icon-96.png"
    },
    "default_title": "Nextdoor Deep Search",
    "default_popup": "popup/popup.html"
  }
}
